<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Kuisoner_Hasil">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/u_navy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_hasil"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Hasil "
            app:titleTextColor="@color/sporty_text_on_dark"
            app:navigationIcon="@android:drawable/checkbox_on_background" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_hasil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/kh_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skor Anda"
                        android:textColor="@color/u_navy"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/kh_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/u_navy"
                            android:textSize="70sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/kh_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textColor="@color/sporty_text_dark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/kh_skor_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:progress="89"
                        app:indicatorColor="@color/u_navy"
                        app:trackColor="@color/sporty_light_grey_bg"
                        app:trackCornerRadius="8dp"
                        app:trackThickness="12dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:textColor="@color/u_navy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kh_tx_nama"
                        android:text="Nama : "
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kh_tx_nama"
                        android:text="Materi : "
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kh_tx_nama"
                        android:text="Hari : "
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kh_tx_nama"
                        android:text="Tanggal : "
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/kh_btn_dashboard"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/u_navy"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Dashboard"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="20dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/kh_btn_materi"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/u_navy"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="Materi"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>